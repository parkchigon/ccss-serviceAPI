		class="com.lgu.ccss.common.view.SingleJsonListMappingJacksonJsonView" />

	<!-- ajaxErrorView설정 -->
	<bean id="ajaxErrorView" class="com.lgu.ccss.common.view.AjaxExceptionView" />


